<form class="form-horizontal" ng-submit="submit()" ng-controller="ContactController" role="form">
	<div class="form-group">
		<label class="col-sm-2 control-label">First Name:</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" ng-model="item.firstName" placeholder="Enter first name"/>
		</div>
		</br>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Last Name:</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" ng-model="item.lastName" placeholder="Enter last name"/>
		</div>
		</br>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Email:</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" ng-model="item.email" placeholder="Enter email"/>
		</div>
		</br>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Mobile No:</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" ng-model="item.mobile" placeholder="Enter mobile no."/>
		</div>
		</br>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Land Line No:</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" ng-model="item.landline" placeholder="Enter land line no."/>
		</div>
		</br>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Address:</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" ng-model="item.address" placeholder="Enter address"/>
		</div>
		</br>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button ng-click="submitTheForm()" class="btn btn-primary">
				Submit
			</button>
		</div>
	</div>
	<div ng-show="userInfo">
		<table border="1px solid;" class="table table-striped table-bordered table-condensed">
			<thead>
				<th>#</th>
				<th>FirstName</th>
				<th>LastName</th>
				<th>Emial</th>
				<th>Mobile No.</th>
				<th>Land Line No.</th>
				<th>Address</th>
				<th style="width: 160px">Actions</th>
			</thead>
			<tbody>
				<tr ng-repeat="item in formItems track by $index">
					<td>{{$index + 1}}</td>
					<td ng-hide="editorEnabled">{{item.firstName}}</td>
					<td ng-hide="editorEnabled">{{item.lastName}}</td>
					<td ng-hide="editorEnabled">{{item.email}}</td>
					<td ng-hide="editorEnabled">{{item.mobile}}</td>
					<td ng-hide="editorEnabled">{{item.landline}}</td>
					<td ng-hide="editorEnabled">{{item.address}}</td>
					<td ng-show="editorEnabled">
					<input type="text" ng-model="item.firstName" value={{item.firstName}}/>
					</td>
					<td ng-show="editorEnabled">
					<input type="text" ng-model="item.lastName" value={{item.lastName}}/>
					</td>
					<td ng-show="editorEnabled">
					<input type="text" ng-model="item.email" value={{item.email}}/>
					</td>
					<td ng-show="editorEnabled">
					<input type="text" ng-model="item.mobile" value={{item.mobile}}/>
					</td>
					<td ng-show="editorEnabled">
					<input type="text" ng-model="item.landline" value={{item.landline}}/>
					</td>
					<td ng-show="editorEnabled">
					<input type="text" ng-model="item.address" value={{item.address}}/>
					</td>
					<td>
					<button ng-click="editorEnabled=!editorEnabled" class="btn btn-default">
						Edit
					</button>
					<button ng-click="removeTheItem(item)" class="btn btn-danger">
						Delete
					</button></td>
				</tr>
			</tbody>
		</table>
	</div>
</form>